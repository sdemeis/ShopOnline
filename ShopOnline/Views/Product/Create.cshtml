@model CreateProductViewModel

@{
    ViewBag.Title = "Aggiungi prodotto";
}

@if (TempData["CreationError"] != null)
{
    <h4 style="color:red">@TempData["CreationError"]</h4>
    <br />
}

<form asp-controller="Product" asp-action="Create" method="post">
    <div>
        <label for="Name">Nome</label>
        <input asp-for="Name"/>
    </div>
    <div>
        <label for="Description">Descrizione</label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label for="Price">Prezzo</label>
        <input type="number" step="0.01" asp-for="Price"/>
    </div>
    <button type="submit">Salva</button>
</form>